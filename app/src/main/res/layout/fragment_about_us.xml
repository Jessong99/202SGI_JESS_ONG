<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/gradient_background_270"
    tools:context=".AboutUsFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/about_us_font" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="121dp"
        android:layout_gravity="center"
        android:layout_height="94dp"
        android:src="@drawable/icon_clear" />

    <Button
        android:id="@+id/shareApp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="#79FFFFFF"
        android:text="Share The App" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Copyright &#169; 2019 J.Note. All rights reserved" />

</LinearLayout>